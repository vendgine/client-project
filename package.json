{
    "name": "@vngn/client-starter",
    "version": "0.0.2",
    "description": "Vendgine Client Starter package",
    "keywords": [
        "vngn",
        "react",
        "client",
        "starter"
    ],
    "type": "module",
    "target": "web",
    "scripts": {
        "start": "npm run serve",
        "build": "rimraf dist && tsc -noEmit && parcel build sources/main.html",
        "build:production": "rimraf dist && tsc -noEmit && parcel build sources/main.html",
        "serve": "tsc -noEmit && parcel sources/main.html",
        "prettier": "prettier \"**/*.{yml,yaml,json,md,scss}\" --write",
        "lint": "eslint --fix --max-warnings 0 \"**/*.{mts,ts,tsx}\"",
        "test": "tsc -noEmit && c8 --include sources/ jest",
        "prepare": "husky install",
        "pre-commit": "npm run prettier && npm run lint && npm run build && npm run test"
    },
    "author": "Andrei Piontkovskii <andrei@p10i.ru>",
    "license": "SEE LICENSE IN LICENSE.txt",
    "devDependencies": {
        "@vngn/codestyle": "^0.0.14",
        "@babel/core": "^7.22.5",
        "@babel/preset-env": "^7.22.5",
        "@babel/preset-react": "^7.22.5",
        "@babel/preset-typescript": "^7.22.5",
        "@parcel/transformer-sass": "^2.9.3",
        "@types/common-tags": "^1.8.1",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.3",
        "@types/react": "^18.2.14",
        "@types/react-dom": "^18.2.6",
        "@types/sinon": "^10.0.15",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "babel-jest": "^29.5.0",
        "babel-plugin-module-resolver": "^5.0.0",
        "buffer": "^6.0.3",
        "c8": "^8.0.0",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^46.4.3",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "msw": "^1.2.2",
        "prettier": "^2.8.8",
        "sinon": "^15.2.0",
        "tslib": "^2.6.0",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "common-tags": "^1.8.2",
        "parcel": "^2.9.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.14.1",
        "reflect-metadata": "^0.1.13",
        "ts-essentials": "^9.3.2",
        "tsyringe": "^4.8.0"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.7",
        "utf-8-validate": "^6.0.3"
    }
}
